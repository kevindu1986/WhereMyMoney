@model IEnumerable<WhereMyMoney.Models.Tbl_User>

@{
    ViewData["Title"] = "User List";
}

<h2>User List</h2>

<table class="table">
    <tr>
        <th>User Name</th>
        <th>Password</th>
        <th><a asp-controller="User" asp-action="Create">Create new User</a></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a asp-controller="User" asp-action="Update" asp-route-id="@item.Id">Update</a> | <a asp-controller="User" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you wish to delete \'@item.UserName\'?');">Delete</a>
            </td>
        </tr>
    }
</table>
