@model WhereMyMoney.Models.Tbl_Category

@{
    ViewData["Title"] = "New Category";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Category" asp-action="Create" method="post" class="form-horizontal" role="form">
    <div class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="CategoryName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
                <input type="button" value="Cancel" class="btn btn-default" id="cancel" />
            </div>
        </div>
    </div>
</form>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('input#cancel').click(function () {
                window.location = '@Url.Action("Index","Category")'
            });
        });
    </script>
}
